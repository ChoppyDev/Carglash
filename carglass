#!/usr/bin/bash

playsound() {
    paplay $1;
}

logo() {
    echo '                                                                                                                                                               
                                                                                                                                                              
                                                       .............  ############# #############  ####################                                       
                                                   ..  .............  ############# #############  ##################                                         
                                                 ....  .............  ############# #############  ################                                           
                                               ......  .............  ############# #############  ##############                                             
                                             ........  .............  ############# #############  ############                                               
                                           ..........  .............  ############# #############  ##########&                                                
                                         ............  .............  ############# #############  ########&                                                  
                                       ..............  .............  ############# #############  ######&                                                    
                                     ................  .............  ############# #############  ####&                                                      
                                   ..................  .............  ############# #############  ##%                                                        
                                 ....................  .............  ############# #############  %                                                          
                                                                                                                                                              
                                                                                                                                                              
                                                                                                                                                          ##  
                                                                                                                                                          ##  
      ############%        #######         ###############      ##############   #####                 #######          #############    #############    ##  
   #####     ###        #########        ####       #####   ######       ##    ####                 ## ####       %####      ###    ####      %##             
  #####                  ####  ####%       ####        ##### #####               ####                 ###   ####      #####            #####                  
  ####                  ####    ####       ####       ##### %####     #########  ####                ####    ####      ###########%     ############          
  ####                 ####      ####      ##############   #####    ##########  ####               ####      ####        ###########      ###########        
  #####               ################     ####    %#####    ####          ####  ####              ################              #####            #####       
   #####        ##   ##################    ####      %####   %####        #####  ####         ##  ##################  ##         ##### ##         #####       
    %#############  #####           ####   ####        #####   ################  ##############  ####           #####  #############    #############         
          %%                                                         %%                                                     %%%              %#%              
                                                                                                                                                              
                                                                                                                                                               '
}

help() {
    echo "Usage: carglass [ARGS]
            ARGS:
                olivier - Plays the famous 'Bonjour, je suis olivier de Carglass'
                jingle  - Plays the carglass Jingle
                help    - Print the help command
    
    "
}


case $1 in
    olivier)
    logo
    echo "Bonjour, je suis olivier de Carglass"
    playsound /usr/bin/carglass-mp3/olivier.ogg
    ;;
    help)
      help
    ;;
    jingle)
      playsound /usr/bin/carglass-mp3/carglass_jingle.ogg
    ;;
    carglouch)
      playsound /usr/bin/carglass-mp3/carglouch.ogg
    ;;
    *)
      help  
    ;;
esac
